<Window x:Class="FunicularControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Фуникулеры" Height="450" Width="500">
    <StackPanel Margin="20">
        <TextBlock Text="Состояние фуникулеров:" FontWeight="Bold" FontSize="24" Margin="0,0,0,15"/>
        <StackPanel Orientation="Horizontal" Margin="0 20" HorizontalAlignment="Center">
            <Rectangle x:Name="F1Rect" Width="120" Height="120" Fill="White" Stroke="Black" StrokeThickness="3" Margin="15"/>
            <Rectangle x:Name="F2Rect" Width="120" Height="120" Fill="White" Stroke="Black" StrokeThickness="3" Margin="15"/>
        </StackPanel>
        <Button Content="Следующее состояние" Click="NextState_Click" Margin="0 10" Padding="15,10" FontSize="18"/>
        <Button Content="Авто режим" Click="StartAuto_Click" Margin="0 10" Padding="15,10" FontSize="18"/>
        <Button Content="Стоп" Click="StopAuto_Click" Margin="0 10" Padding="15,10" FontSize="18"/>
    </StackPanel>
</Window>

